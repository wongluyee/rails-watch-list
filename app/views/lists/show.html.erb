<%= render 'layouts/running-text' %>
<%= render 'layouts/navbar' %>
<div class="container mt-3">
  <h1><%= @list.name %></h1>
  <h5>Movies</h5>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col w-25">
        <div class="card">
          <%= image_tag bookmark.movie.poster_url, alt: "poster", class: "card-img-top" %>
          <div class="info d-flex justify-content-between align-items-end">
            <div class="card-body">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.comment %></p>
            </div>
            <div class="delete-card pe-3 pb-2 h5">
              <%= link_to bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Delete #{bookmark.comment}?"} do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-3 mb-4" %>
</div>
