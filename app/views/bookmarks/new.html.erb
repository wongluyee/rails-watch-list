<%= render 'layouts/running-text' %>
<%= render 'layouts/navbar' %>
<div class="container mt-3">
  <h1>Add a new movie</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, include_blank: false, collection: @movies %>
    <%= f.submit 'Add movie', class:"btn btn-primary" %>
  <% end %>
  <%= link_to "Back to list", list_path(@list), class: "btn btn-primary mt-3"  %>
</div>
